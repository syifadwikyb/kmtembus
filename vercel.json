{
    "version": 2,
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.6.0",
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "routes": [
        { "src": "/(.*)", "dest": "/public/index.php" }
    ],
    "public": true,
    "buildCommand": "composer install --no-dev --optimize-autoloader",
    "outputDirectory": "public"
}
