{
    "version": 2,
    "functions": {
        "api/index.php": { 
            "runtime": "vercel-php@0.6.0" 
        }
    },
    "routes": [
        { 
            "src": "/images/(.*)", 
            "dest": "/public/images/$1" 
        },
        { 
            "src": "/(.*)", 
            "dest": "/api/index.php" 
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://kmtembus.vercel.app/",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    },
    "buildCommand": "curl -sS https://getcomposer.org/installer | php && php composer.phar install --no-dev --optimize-autoloader",
    "outputDirectory": "public"
}
